general {
        colors = true
        interval = 5
}

order += "ethernet enp3s0"
order += "disk /"
order += "cpu_usage"
order += "load"
order += "tztime local"
order += "volume master"

ethernet enp3s0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

tztime local {
        format = "%Y-%m-%d %A [%H:%M:%S]"
}

load {
        format = "%5min"
}

cpu_usage {
        format = "%usage"
}

disk "/" {
        format = "%free"
}

volume master {
        format = "âª: %volume"
        format_muted = "âª: muted (%volume)"
        device = "pulse"
}
